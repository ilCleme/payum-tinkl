{
    "name": "ilcleme/payum-tinkl",
    "type": "library",
    "description": "Tinkl's Payum extension. Pay with bitcoin",
    "keywords": ["payment", "bitcoin", "payum", "tinkl", "gateway"],
    "homepage": "https://ilcle.me",
    "license": "MIT",
    "authors": [
        {
            "name": "Clementi Mattia",
            "email": "ilcleme@gmail.com"
        }
    ],
    "require": {
        "payum/core": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "php-http/guzzle6-adapter": "^1.0"
    },
    "autoload": {
        "psr-4": { "IlCleme\\Tinkl\\": "src/" }
    },
    "autoload-dev": {
      "psr-4": { "IlCleme\\Tinkl\\Tests\\": "tests/" }
    },
    "scripts": {
      "test": "./vendor/bin/phpunit ./Tests"
    }
}
